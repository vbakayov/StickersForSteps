<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" android:id="@+id/rootLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Brave"
        android:textSize="30dp"
        android:typeface="monospace"

        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/stick_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:tag="top_container"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="-30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"

        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:id="@+id/container_2"
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical"

            android:weightSum="1"
            android:layout_gravity="left|top"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/textView"
            android:layout_alignStart="@+id/stick_container"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/angus_img"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/brave_angus_bg"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/angus_img"
                android:gravity="center"
                android:text="#2"
                android:textSize= "25dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_alignParentTop="true"
                android:layout_alignBottom="@+id/angus_img"
                android:layout_alignParentEnd="true"
                android:id="@+id/angus_txt" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/container_3"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_gravity="left|center_vertical"
            android:layout_below="@+id/container_1"
            android:layout_toStartOf="@+id/textView">



            <ImageView
                android:id="@+id/macguffin_img"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/brave_lord_macguffin_bg"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true" />


            <TextView
                android:id="@+id/macguffin_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/macguffin_img"
                android:layout_alignTop="@+id/macguffin_img"
                android:layout_alignRight="@+id/macguffin_img"
                android:layout_alignBottom="@+id/macguffin_img"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="#3"
                android:textSize= "25dp"
                android:textStyle="bold"
                android:textColor="#ffffff" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/container_1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:layout_gravity="right|bottom"

            android:layout_alignTop="@+id/container_4"
            android:layout_toStartOf="@+id/textView"
            android:layout_marginBottom="40dp"
            android:layout_marginRight="-30dp">

            <ImageView
                android:id="@+id/fergus_img"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/brave_king_fergus_bg"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />


            <TextView
                android:id="@+id/fergus_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/fergus_img"
                android:layout_alignTop="@+id/fergus_img"
                android:layout_alignRight="@+id/fergus_img"
                android:layout_alignBottom="@+id/fergus_img"
                android:gravity="center"
                android:text="#1"
                android:textSize= "25dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_alignParentEnd="false"
                android:layout_alignParentStart="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="false"
                android:layout_alignParentRight="false"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="40dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/container_8"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:gravity="right"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_gravity="right|center_vertical"
            android:layout_below="@+id/container_5"
            android:layout_alignParentEnd="true">



            <ImageView
                android:id="@+id/dingwall_img"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/brave_wee_dingwall_bg"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />


            <TextView
                android:id="@+id/dingwall_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/sticker_8"
                android:gravity="center"
                android:text="#8"
                android:textSize= "25dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="80dp"
                android:layout_alignParentStart="true"
                android:layout_alignBottom="@+id/sticker_8"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/container_6"
            android:layout_width="106dp"
            android:layout_height="132dp"
            android:gravity="right"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_gravity="top|center_horizontal"
            android:layout_below="@+id/container_5"
            android:layout_alignStart="@+id/container_5"
            android:layout_alignBottom="@+id/container_3"
            android:layout_alignEnd="@+id/container_5">



            <ImageView
                android:id="@+id/elinor_img"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/brave_queen_elinor_bg"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />


            <TextView
                android:id="@+id/elinor_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/elinor_img"
                android:gravity="center"
                android:text="#6"
                android:textSize= "25dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentStart="true"
                android:layout_alignBottom="@+id/elinor_img"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/container_7"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:gravity="right"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_gravity="right|top"
            android:layout_below="@+id/textView"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp">



            <ImageView
                android:id="@+id/triplets_img"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/brave_triplets_bg"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />


            <TextView
                android:id="@+id/triplets_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/triplets_img"
                android:gravity="center"
                android:text="#7"
                android:textSize= "25dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:layout_alignParentStart="true"
                android:layout_alignBottom="@+id/triplets_img"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/container_5"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:gravity="right"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_above="@+id/container_3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-40dp">

            <ImageView
                android:id="@+id/merida_img"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/brave_merida_bg"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />


            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/merida_txt"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/merida_img"
                android:layout_alignRight="@+id/merida_img"
                android:layout_alignBottom="@+id/merida_img"
                android:gravity="center"
                android:text="#5"
                android:textSize= "25dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/container_4"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/container_2"
            android:layout_toEndOf="@+id/textView"
            android:layout_marginBottom="40dp">



            <ImageView
                android:id="@+id/macintosh_img"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/brave_lord_macintosh_bg"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />


            <TextView
                android:id="@+id/macintosh_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="#4"
                android:textSize= "25dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="60dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>


        <ImageView
            android:id="@+id/macguffin"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:layout_gravity="left|bottom" />

        <ImageView
            android:id="@+id/lord_macintosh"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:layout_gravity="left|bottom" />

        <ImageView
            android:id="@+id/merida"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_margin="5dp"
            android:layout_gravity="left|bottom" />

        <ImageView
            android:id="@+id/angus"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            android:layout_gravity="left|bottom" />

        <ImageView
            android:id="@+id/dingwall"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="5dp"
            android:layout_gravity="left|bottom" />

        <ImageView
            android:id="@+id/triplets"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="5dp"
            android:layout_gravity="left|bottom" />

        <ImageView
            android:id="@+id/elinor"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            android:layout_gravity="left|bottom" />

        <ImageView
            android:id="@+id/fergus"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            android:layout_gravity="left|bottom" />
    </FrameLayout>
</RelativeLayout>
