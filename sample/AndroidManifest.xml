<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.astuetz.viewpager.extensions.sample">
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:largeHeap="true"
        android:label="@string/app_name"
        android:icon="@drawable/icon2"
        android:theme="@style/AppTheme">

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.astuetz.viewpager.extensions.fragment.MainActivity"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <provider
            android:name="com.astuetz.viewpager.extensions.fragment.CachedFileProvider"
            android:authorities="com.stephendnicholas.gmailattach.provider"
            android:grantUriPermissions="true">
        </provider>
        <activity
            android:name="com.astuetz.viewpager.extensions.fragment.MainActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="bluetoothchat.DeviceListActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/select_device"
           />
        <activity android:name="com.astuetz.viewpager.extensions.fragment.CombinedChartActivity"/>
        <activity android:name="com.astuetz.viewpager.extensions.fragment.ListActivity"/>



        <service
            android:name="com.astuetz.viewpager.extensions.fragment.SensorListener"/>


        <receiver android:name="com.astuetz.viewpager.extensions.fragment.BootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

        <receiver
            android:name="com.astuetz.viewpager.extensions.fragment.ShutdownRecevier">
            <intent-filter>
                <action android:name="android.intent.action.ACTION_SHUTDOWN"/>
                <action android:name="de.j4velin.ACTION_SHUTDOWN"/>
            </intent-filter>
        </receiver>


    </application>

</manifest>