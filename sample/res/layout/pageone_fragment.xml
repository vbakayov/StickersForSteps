<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/top_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:layout_weight=".5"
        android:gravity="center"
        android:orientation="horizontal"
        android:tag="top_container"
        >

        <ImageView
            android:id="@+id/rugby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/rugby" />

        <ImageView
            android:id="@+id/sherman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/sherman" />

        <ImageView
            android:id="@+id/girl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/girl"
            android:layout_gravity="center_vertical" />

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/bottom_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="left"
        android:orientation="vertical"

        android:weightSum="1">



        <ImageView
            android:id="@+id/Sticker1Container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shermanblack"
            android:layout_weight="0.16" />


        <TextView
            android:id="@+id/myImageViewText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/Sticker1Container"
            android:layout_alignTop="@+id/Sticker1Container"
            android:layout_alignRight="@+id/Sticker1Container"
            android:layout_alignBottom="@+id/Sticker1Container"
            android:layout_margin="1dp"
            android:gravity="center"
            android:text="#1"
            android:textSize= "25dp"
            android:textStyle="bold"
            android:textColor="#ffffff" />
        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_container2"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="left"
        android:orientation="vertical"

        android:weightSum="1"
        android:layout_gravity="right">

        <ImageView
            android:id="@+id/Sticker2Container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/girlblack"
            android:layout_weight="0.16"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />


        <TextView
            android:id="@+id/myImageViewText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/Sticker2Container"
            android:layout_alignTop="@+id/Sticker2Container"
            android:layout_alignRight="@+id/Sticker2Container"
            android:layout_alignBottom="@+id/Sticker2Container"
            android:layout_margin="1dp"
            android:gravity="center"
            android:text="#1"
            android:textSize= "25dp"
            android:textStyle="bold"
            android:textColor="#ffffff" />




    </RelativeLayout>

</LinearLayout>
