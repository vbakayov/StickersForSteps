<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:id="@+id/showStickerLayout"
    android:background="#7F000000"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/sticker1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/shrek_donkey_burned"
        android:layout_marginRight="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="64dp" />

    <ImageView
        android:id="@+id/sticker2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/shrek_donkey_burned"
        android:layout_marginRight="5dp"
        android:layout_above="@+id/sticker3"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/sticker3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/shrek_donkey_burned"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/sticker1"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
